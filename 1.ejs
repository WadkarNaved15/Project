<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Table</title>
    <style>
        .container{
            display: flex;
            justify-content: center;
            position: relative;
        }
        table {
            border-collapse: collapse;
            min-width: 70%;
            margin: 0 auto; 
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 10px;
        }
        th {
            background-color: #f2f2f2;
        }
        h2{
            text-align: center;
        }
        .back a img{
            height: 30px;
            position: absolute;
            top: 0;
        }
        #download img{
            height: 35px;
            position: absolute;
            right: 25px;
            top: -60px;
        }
        #downloadButton {
            position: absolute;
            right: 10px;
            top: -65px;
            bottom: 159px;
            background: none;
            border: none;
            padding: 0;
            margin: 0;
            font: inherit;
            color: black;
            cursor: pointer;
        }

        #downloadButton:hover,
        #downloadButton:focus {
            background: none;
            outline: none;
        }

        .text p{
            font-size: 10px;
            position: absolute;
            right: 18px;
            top: 35px;
        }

        .input-buttons {
            position: absolute;
            top: 10px;
            right: 10px;

        }
        

        .input-buttons input[type="text"] {
            padding: 5px;
            margin-right: 5px;
            position: absolute;
            bottom: 43px;
            right: 223px;
        }

        .action-buttons {
            position: absolute;
            top: 10px;
            right: 120px;
        }

        .action-buttons button {
            margin-left: 10px;
            padding: 8px 15px;
            cursor: pointer;
        }

        .action-buttons button.approve {
            background-color: #4CAF50;
            border: none;
            color: white;
            border-radius: 4px;
            position: absolute;
            bottom: 43px;
            right: 34px;
        }

        .action-buttons button.reject {
            background-color: #f44336;
            border: none;
            color: white;
            border-radius: 4px;
            position: absolute;
            bottom: 43px;
            right: -43px;
        }
    </style>
</head>
<body>
    <h2>Data Table</h2>
    <div class="container">
        <div class="input-buttons">
            <input type="text" id="requestIdInput" placeholder="Request ID">
        </div>
        <div class="action-buttons">
            <button class="approve">Approve</button>
            <button class="reject">Reject</button>
        </div>

        <div id="download">
            <form action="/download_excel" method="post">
                <img src="../public/Images/download.svg" alt="download">
                <input type="hidden" name="data" value="<%= JSON.stringify(data) %>">
                <input type="hidden" name="columns" value="<%= JSON.stringify(columns) %>">
                <button id="downloadButton" type="submit">Download</button>
            </form>
        </div>

        <div class="back">
            <a href="/return" >
                <img src="/public/Images/back.svg" alt="back">
            </a>
        </div>

        <% if (typeof data === 'string' || !Array.isArray(columns) || columns.length === 0) { %>
            <p>No data available</p>
        <% } else { %>
            <table id="dataTable">
                <thead>
                    <tr>
                        <% columns.forEach(column => { %>
                            <th><%= column %></th>
                        <% }); %>
                    </tr>
                </thead>
                <tbody>
                    <% if (Array.isArray(data)) { %>
                        <% data.forEach((row) => { %>
                            <tr>
                                <% columns.forEach(column => { %>
                                    <td><%= row[column] %></td>
                                <% }); %>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>